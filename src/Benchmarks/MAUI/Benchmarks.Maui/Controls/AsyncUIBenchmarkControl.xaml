<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Benchmarks.Maui.Controls.AsyncUIBenchmarkControl"
             BackgroundColor="{DynamicResource SecondaryColor}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0">
            <Button Text="Run Benchmarks" Clicked="RunBenchmarks_Click" BackgroundColor="Gray" />
            <Entry x:Name="Status" TextColor="Black" />
        </StackLayout>
        <Grid Grid.Row="1">
            <ListView  Grid.Column="0" VerticalScrollBarVisibility="Always" SeparatorVisibility="None" Background="Black"  x:Name="Log" ItemsSource="{Binding Logs}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>                                
                                <Label Text="{Binding LogText}"  TextColor="White"  FontSize="Caption" />
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            <Grid x:Name="UIHost" Grid.Column="1" />
        </Grid>
    </Grid>
</Grid>
